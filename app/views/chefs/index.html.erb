<%= render '/shared/page_title', title: 'View All Chefs' %>

<ul class='nav nav-tabs'>
  <li class='col-md-3'>
    <%= link_to 'Recipes', recipes_path %>
  </li>
  <li class='active col-md-3'>
    <%= link_to 'Chefs', chefs_path %>
  </li>
</ul>


<div class='row'>
  <div class='col-md-4 col-md-offset-4 center'>
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4 center'>
      <%= link_to gravatar_for(chef, size:200), chef_path(chef) %>
      <p><h5>Chef name: <%= chef.chefname %></h5></p>
    </div>
  </div>
<% end %>

<div class='row'>
  <div class='col-md-4 col-md-offset-4 center'>
    <%= will_paginate %>
  </div>
</div>
